{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "jsx": "react",
    "sourceMap": true,
    "baseUrl": "./",
    "lib": [
      "es6",
      "es7",
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "resolveJsonModule": true
  },
  "files": [
    "./custom.d.ts"
  ],
  "exclude": ["build", "node_modules"]
}
