    "@types/jest": "^26.0.13",
    "@types/node": "^14.6.4",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "babel-jest": "^26.3.0",
    "eslint": "^7.8.1",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-plugin-react-hooks": "^1.7.0",
    "eslint-config-prettier": "^6.11.0",
    "webpack": "^4.39.3",
